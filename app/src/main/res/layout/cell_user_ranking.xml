<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorBlack"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/txt_user_position" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_insert_emoticon_black_24dp"
        android:layout_alignTop="@+id/txt_user_position"
        android:layout_toEndOf="@+id/txt_user_position"
        android:layout_marginStart="18dp"
        android:id="@+id/img_user_face" />

    <TextView
        android:text="User Name"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_user_position"
        android:layout_toEndOf="@+id/img_user_face"
        android:layout_marginStart="37dp"
        android:id="@+id/txt_user_name" />

    <TextView
        android:text="100 pt"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_user_name"
        android:layout_toEndOf="@+id/txt_user_name"
        android:layout_marginStart="47dp"
        android:id="@+id/txt_user_score" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_save_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.newproject.jordi.hackupc17.SavePhotoActivity">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/ic_crop_free_black_24dp"
        android:layout_marginTop="61dp"
        android:id="@+id/img_photoresult"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well done!"
        android:textSize="36dp"
        android:layout_marginTop="29dp"
        android:id="@+id/txt_status"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Your score is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_photoresult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="26dp"
        />
</RelativeLayout>
